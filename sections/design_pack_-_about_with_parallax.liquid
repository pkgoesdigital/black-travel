#DP--{{ section.id }} {
  background-size: cover;
  position: relative;
  background-position: center center;
  background-attachment: fixed;
  color: {{ section.settings.text_color }};
  background-color: {%- if background_alpha != 0 -%}{{ section.settings.background_color }}{%- endif -%};
  background-image: {{ background_image }};
}

#DP--{{ section.id }} .dsgn-pck__background::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  height: 100%;
  width: 100%;
  z-index: 1;
  background-color: {%- if background_alpha != 0 -%}{{ section.settings.background_color | color_modify: 'alpha', 0.4 }}{%- endif -%};
}

#DP--{{ section.id }} .dsgn-pck__background {
  position: relative;
  z-index: 2;
}

#DP--{{ section.id }} .dsgn-pck__grid--hero {
  display: grid;
  grid-template-columns: 1fr 1fr 5% 1fr 1fr;
}

#DP--{{ section.id }} .dsgn-pck__about__image {
  grid-column: 1 / span 3;
  grid-row: 1 / span 3;
}

#DP--{{ section.id }} .dsgn-pck__image__wrapper img {
  object-position: {{ section.settings.focal_point }};
}

#DP--{{ section.id }} .dsgn-pck__about__content {
  grid-column: 3 / 6;
  grid-row: 2;
  z-index: 2;
  {%- if section.settings.override_theme_font != blank -%}
  font-family: {{ main_font }};
  font-weight: {{ section.settings.main_font.weight }};
  font-style: {{ section.settings.main_font.style }};
  {%- endif -%}
  color: {{ section.settings.text_color }};
}

#DP--{{ section.id }} .dsgn-pck__about__inner-content {
  text-align: left;
}

#DP--{{ section.id }} .dsgn-pck__intro-text {
  transform: rotate(0deg) translateX(-20px) translateY(20px);
  transform-origin: left;
  line-height: 1;
  margin-bottom: 10px;
  font-size: clamp(12px, {{ section.settings.text_size | times: 0.025 }}em, 72px);
  font-family: {{ fancy_font }}, fantasy;
}

#DP--{{ section.id }} .dsgn-pck__heading {
  font-size: clamp(16px, {{ section.settings.text_size | times: 0.035 }}em, 72px);
  {%- if section.settings.override_theme_font != blank -%}
  font-family: {{ heading_font }};
  font-weight: {{ section.settings.heading_font.weight }};
  font-style: {{ section.settings.heading_font.style }};
  {%- endif -%}
}

#DP--{{ section.id }} em {
  display: inline-block;
  position: relative;
}

#DP--{{ section.id }} em:before {
  content: '';
  display: block;
  position: absolute;
  width: 100%;
  height: 50%;
  top: 50%;
  bottom: 0;
  right: 0;
  left: 0;
  z-index: -1;
  transform: skewX(-10deg);
  background: {{ section.settings.text_highlight_color }};
}

#DP--{{ section.id }} .dsgn-pck__text {
  margin-left: 5em;
  width: 70%;
}

#DP--{{ section.id }} .dsgn-pck__text p {
  line-height: 1.4;
  font-size: clamp(14px, {{ section.settings.text_size | times: 0.013 }}em, 48px);
}

/* Animation */
{%- if section.settings.animation != 'none' -%}
  #DP--{{ section.id }}.dsgn-pck__animation-applied [style*="--dsgn-pck-animate"] {
    animation-name: dsgn-pck__animation--{{ section.settings.animation }};
  }
{%- else -%}
  #DP--{{ section.id }} [style*="--dsgn-pck-animate"] {
    opacity: 1;
  }
{% endif %}

/* Layout */
#DP--{{ section.id }} {
  margin-top: {{ section.settings.outer_margin }}px;
  margin-bottom: {{ section.settings.outer_margin }}px;
}

#DP--{{ section.id }} .dsgn-pck__sizer {
  position: relative;
  z-index: 3;
  padding-top: {{ section.settings.inner_padding }}px;
  padding-bottom: {{ section.settings.inner_padding }}px;
  width: {{ section.settings.base_width }}%;
  max-width: {{ max_width }};
}

{%- if section.settings.custom_css != blank -%}
  {%- assign custom_section_declarations = section.settings.custom_css | split: '}' -%}
  {%- for declaration in custom_section_declarations -%}
    {%- if declaration contains '{' -%}
      #DP--{{ section.id }} {{ declaration }} }
    {%- endif -%}
  {%- endfor -%}
{%- endif -%}

